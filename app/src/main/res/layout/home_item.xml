<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_item_iv"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            tools:src="@drawable/icon_tasks"
            android:layout_marginTop="@dimen/space8"
            android:layout_marginStart="@dimen/space8"/>

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tasks"
            android:padding="@dimen/space8"
            android:layout_marginStart="@dimen/space8"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="end"
            android:background="@drawable/bg_remaining"
            android:layout_marginBottom="@dimen/space18"
            android:layout_marginStart="@dimen/space18">

            <TextView
                android:id="@+id/home_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="50"
                android:textColor="@color/white"

                android:layout_gravity="start"
                android:layout_marginStart="@dimen/space8"/>

            <TextView
                android:id="@+id/home_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="items remaining"
                android:textColor="@color/white"

                android:layout_gravity="start"
                android:layout_marginStart="@dimen/space8"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>