<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nextasksolution">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NTApp">
        <activity android:name=".activities.tasksActivity.TasksActivity"
            android:label=""
            android:theme="@style/Theme.NTApp.NoActionBar"/>
        <activity
            android:name=".activities.homePageActivity.HomePageActivity"
            android:label=""
            android:theme="@style/Theme.NTApp.NoActionBar" />

        <activity android:name=".activities.loginActivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>